############################################
# Postgres / pgvector (Compose)
############################################
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=inventory
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/inventory
PGVECTOR_CONNECTION_STRING=postgresql+psycopg://postgres:postgres@postgres:5432/inventory

############################################
# Django (backend)
############################################
DJANGO_SECRET_KEY=change-me
DJANGO_DEBUG=0
ALLOWED_HOSTS=*

############################################
# RAG – Colección / Ingesta
############################################
# ⚠️ Usa una colección distinta si cambias de modelo de embeddings
# Para GitHub Models (1536d):
LC_COLLECTION=kb_gh

# Si prefieres mantener embeddings locales (384d), podrías usar:
# LC_COLLECTION=kb

############################################
# LLM por GitHub Models (OpenAI-compatible)
############################################
# Requiere PAT de GitHub con scope: models:read
OPENAI_API_KEY=ghp_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
OPENAI_BASE_URL=https://models.github.ai/inference
OPENAI_MODEL=openai/gpt-4o-mini

############################################
# Embeddings con GitHub Models (recomendado si migras)
############################################
EMBEDDING_BACKEND=openai
EMBEDDING_MODEL=openai/text-embedding-3-small
EMBEDDING_DIMS=1536

############################################
# (Alternativa) Embeddings locales HF (no requieren API)
# Si usas esto, cambia EMBEDDING_BACKEND=hf y reingesta en su colección
############################################
# EMBEDDING_BACKEND=hf
# HF_EMB_MODEL=sentence-transformers/all-MiniLM-L6-v2

############################################
# Ollama (opcional, para LLM local)
############################################
# Si quieres usar LLM local en lugar de GitHub/OpenAI:
USE_OLLAMA=0
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1:8b-instruct

############################################
# RAG – Ingesta automática al iniciar contenedor (opcional)
############################################
RAG_INGEST_ON_START=0
